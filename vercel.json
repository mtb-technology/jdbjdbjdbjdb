{
  "version": 2,
  "buildCommand": "vite build && esbuild api/index.ts --platform=node --packages=bundle --bundle --format=esm --outfile=api/index.js --external:@neondatabase/serverless --external:ws --external:bufferutil",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
